# --- Base PHP FPM ---
FROM php:8.2-fpm

# --- Install system dependencies + Node 20 LTS + Nginx ---
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    libpng-dev libonig-dev libxml2-dev libpq-dev \
    zip unzip git curl libicu-dev \
    build-essential python3 gnupg ca-certificates \
    nginx \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && docker-php-ext-install pdo_pgsql mbstring exif pcntl bcmath gd intl

# --- Install Composer ---
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# --- Set working directory ---
WORKDIR /var/www/html

# --- Copy project files ---
COPY . .

# --- Install PHP dependencies ---
RUN composer install --no-dev --optimize-autoloader

# --- Install Node dependencies and build Vite assets ---
RUN npm install
RUN npm run build

# --- Set permissions ---
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# --- Configure Nginx ---
RUN rm /etc/nginx/sites-enabled/default
COPY ./docker/nginx.conf /etc/nginx/conf.d/default.conf

# --- Expose ports (HTTP + HTTPS + PHP-FPM socket) ---
EXPOSE 80 443 9000

# --- Avvia nginx e php-fpm in foreground ---
CMD ["sh", "-c", "php artisan config:clear && php artisan cache:clear && php artisan view:clear && php-fpm -F -R & nginx -g 'daemon off;'"]