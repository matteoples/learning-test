# --- Base PHP ---
FROM php:8.2-fpm

# --- Install system dependencies e Node 20 ---
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    zip \
    unzip \
    git \
    curl \
    libicu-dev \
    build-essential \
    python3 \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && docker-php-ext-install pdo_pgsql mbstring exif pcntl bcmath gd intl

# --- Install Composer ---
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# --- Set working directory ---
WORKDIR /var/www/html

# --- Copy entire project first (artisan exists) ---
COPY . .

# --- Install PHP dependencies ---
RUN composer install --no-dev --optimize-autoloader

# --- Install Node dependencies e build assets Vite ---
RUN npm install
RUN npm run build

# --- Set permissions for storage e cache ---
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# --- Espone porta per Render ---
EXPOSE 8000

# --- Avvia PHP-FPM ---
CMD ["php-fpm"]
